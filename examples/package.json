{
  "name": "croupier-js-hotreload-example",
  "version": "1.0.0",
  "description": "Croupier Node.js SDK Hot Reload Example",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "dev": "nodemon main.js",
    "dev:pm2": "pm2 start ecosystem.config.js --env development",
    "prod": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop all",
    "logs": "pm2 logs",
    "reload": "pm2 reload all",
    "test": "node test/test.js"
  },
  "keywords": [
    "croupier",
    "hotreload",
    "nodejs",
    "gaming",
    "sdk"
  ],
  "author": "Croupier Team",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "main.js",
      "src/",
      "functions/"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development",
      "CROUPIER_HOTRELOAD": "true"
    },
    "events": {
      "start": "echo 'ðŸ”¥ Starting with hot reload...'",
      "restart": "echo 'ðŸ”„ Restarting due to file changes...'"
    }
  }
}